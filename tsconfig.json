{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": true,
        "allowJs": true,
        "checkJs": false,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "types": ["vite/client"],
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "./**/*.ts",
        "./**/*.d.ts",
        "./**/*.tsx",
        "./**/*.js",
        "./.eslintrc.js"
        // "./src/plugins/print/*.js",
        // "./src/**/*",
        // "./public/**/*"
    ],
    "exclude": ["node_modules", "dist", ".husky"]
}
